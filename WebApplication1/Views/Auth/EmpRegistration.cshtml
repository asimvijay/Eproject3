@model HealthInsurance.Models.EmpRegistrationViewModel

@{
    ViewData["Title"] = "Employee Registration";
}

<section class="bg-gray-50 dark:bg-gray-900 min-h-screen flex items-center justify-center py-6 lg:py-12">
    <div class="w-full max-w-5xl bg-white rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-8 dark:text-white">
                Employee Registration
            </h1>

            @if (ViewBag.Message != null)
            {
                <div class="mb-4 p-4 bg-green-100 border border-green-300 text-green-700 rounded-lg">
                    @ViewBag.Message
                </div>
            }

            @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
            {
                <div class="mb-4 p-4 bg-red-100 text-red-700 rounded border border-red-300">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="EmpRegistration" method="post" class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
                <!-- Personal Information -->
                <div>
                    <label for="FirstName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">First Name</label>
                    <input asp-for="FirstName" id="FirstName" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your first name" required>
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="LastName" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Last Name</label>
                    <input asp-for="LastName" id="LastName" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your last name" required>
                    <span asp-validation-for="LastName" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="Username" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Username</label>
                    <input asp-for="Username" id="Username" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your username" required>
                    <span asp-validation-for="Username" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="Password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Password</label>
                    <input asp-for="Password" id="Password" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your password" required>
                    <span asp-validation-for="Password" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Contact Information -->
                <div>
                    <label for="ContactNo" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact No</label>
                    <input asp-for="ContactNo" id="ContactNo" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your contact number" required>
                    <span asp-validation-for="ContactNo" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="Address" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Address</label>
                    <input asp-for="Address" id="Address" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your address" required>
                    <span asp-validation-for="Address" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="State" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">State</label>
                    <input asp-for="State" id="State" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your state" required>
                    <span asp-validation-for="State" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="Country" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Country</label>
                    <input asp-for="Country" id="Country" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your country" required>
                    <span asp-validation-for="Country" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="City" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">City</label>
                    <input asp-for="City" id="City" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your city" required>
                    <span asp-validation-for="City" class="text-red-500 text-sm mt-1"></span>
                </div>
                <!-- Designation and Join Date -->
                <div>
                    <label for="Designation" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Designation</label>
                    <input asp-for="Designation" id="Designation" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your designation" required>
                    <span asp-validation-for="Designation" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="JoinDate" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Join Date</label>
                    <input asp-for="JoinDate" id="JoinDate" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
                    <span asp-validation-for="JoinDate" class="text-red-500 text-sm mt-1"></span>
                </div>  
                <!-- Salary -->
                <div>
                    <label for="Salary" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Salary</label>
                    <input asp-for="Salary" id="Salary" type="number" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your salary" required>
                    <span asp-validation-for="Salary" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Policy Information -->
                <div>
                    <label for="PolicyStatus" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Policy Status</label>
                    <input asp-for="PolicyStatus" id="PolicyStatus" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your policy status" required>
                    <span asp-validation-for="PolicyStatus" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label for="PolicyId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Policy ID</label>
                    <input asp-for="PolicyId" id="PolicyId" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Enter your policy ID" required>
                    <span asp-validation-for="PolicyId" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div class="col-span-2">
                    <button type="submit" class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-3 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Register Employee
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

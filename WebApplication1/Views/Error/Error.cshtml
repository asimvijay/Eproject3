@page
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<section class="bg-gray-50 min-h-screen flex items-center justify-center py-6 lg:py-12">
    <div class="w-full max-w-md bg-white rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-4 dark:text-white">
                An Error Occurred
            </h1>
            <p class="text-gray-600 dark:text-gray-300">
                Sorry, an error occurred while processing your request.
            </p>
            <a href="/" class="text-blue-600 hover:text-blue-800">Back to Home</a>
        </div>
    </div>
</section>

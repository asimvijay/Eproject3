@model HealthInsurance.Entities.HospitalInfo

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto p-6">
    <h1 class="text-3xl font-extrabold mb-8 text-center text-gray-800 dark:text-gray-200">Hospital Details</h1>

    <div class="bg-white dark:bg-gray-800 p-8 rounded-xl shadow-xl">
        <h4 class="text-2xl font-semibold mb-6 text-gray-800 dark:text-gray-200">Hospital Information</h4>
        <hr class="border-gray-300 dark:border-gray-700 mb-8" />

        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-6">
            <div class="flex flex-col">
                <dt class="flex items-center font-medium text-gray-900 dark:text-gray-100">
                    <i class="fas fa-hospital mr-3 text-blue-500"></i> @Html.DisplayNameFor(model => model.HospitalName)
                </dt>
                <dd class="text-gray-700 dark:text-gray-300 mt-2">@Html.DisplayFor(model => model.HospitalName)</dd>
            </div>
            <div class="flex flex-col">
                <dt class="flex items-center font-medium text-gray-900 dark:text-gray-100">
                    <i class="fas fa-phone-alt mr-3 text-green-500"></i> @Html.DisplayNameFor(model => model.PhoneNo)
                </dt>
                <dd class="text-gray-700 dark:text-gray-300 mt-2">@Html.DisplayFor(model => model.PhoneNo)</dd>
            </div>
            <div class="flex flex-col">
                <dt class="flex items-center font-medium text-gray-900 dark:text-gray-100">
                    <i class="fas fa-map-marker-alt mr-3 text-red-500"></i> @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="text-gray-700 dark:text-gray-300 mt-2">@Html.DisplayFor(model => model.Location)</dd>
            </div>
            <div class="flex flex-col">
                <dt class="flex items-center font-medium text-gray-900 dark:text-gray-100">
                    <i class="fas fa-globe mr-3 text-yellow-500"></i> @Html.DisplayNameFor(model => model.URL)
                </dt>
                <dd class="text-blue-600 dark:text-blue-400 mt-2">@Html.DisplayFor(model => model.URL)</dd>
            </div>
        </dl>
    </div>

    <div class="mt-8 flex justify-center space-x-8">
        <a asp-action="Index" class="flex items-center px-5 py-3 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600 transition duration-300 shadow-md">
            <i class="fas fa-arrow-left mr-3"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.HospitalId" class="flex items-center px-5 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 transition duration-300 shadow-md">
            <i class="fas fa-edit mr-3"></i> Edit
        </a>
    </div>
</div>

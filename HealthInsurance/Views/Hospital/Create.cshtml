@model HealthInsurance.Entities.HospitalInfo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-lg p-8 bg-white rounded-xl shadow-lg dark:bg-gray-800"> 
        <h1 class="text-3xl font-extrabold mb-6 text-center text-gray-900 dark:text-gray-100">Add Hospital</h1>
        <hr class="mb-8 border-gray-300 dark:border-gray-600" />

        <form asp-action="Create" class="space-y-8">
            <div class="grid grid-cols-1 gap-y-6">
                <div class="space-y-2">
                    <label for="HospitalName" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                        Hospital Name
                    </label>
                    <input id="HospitalName" name="HospitalName" asp-for="HospitalName" type="text" placeholder="Enter the hospital name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="HospitalName" class="text-red-500 text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label for="PhoneNo" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                        Phone Number
                    </label>
                    <input id="PhoneNo" name="PhoneNo" asp-for="PhoneNo" type="text" placeholder="Enter the phone number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="PhoneNo" class="text-red-500 text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label for="Location" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                        Location
                    </label>
                    <input id="Location" name="Location" asp-for="Location" type="text" placeholder="Enter the location" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Location" class="text-red-500 text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label for="URL" class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                        Hospital URL
                    </label>
                    <input id="URL" name="URL" asp-for="URL" type="text" placeholder="Enter the hospital URL" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="URL" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="flex items-center gap-4 flex-row-reverse mt-8">
                <div class="w-full">
                    <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 dark:bg-blue-700 dark:hover:bg-blue-800 rounded-lg py-3 font-medium text-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out">
                        Create
                    </button>
                </div>
                <div class="text-center whitespace-nowrap">
                    <a asp-action="Index" class="inline-flex items-center text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-150 ease-in-out">
                        <i class="fas fa-arrow-left mr-2"></i> Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
@model HealthInsurance.Entities.EmpRegister

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-5xl p-8 bg-white rounded-xl shadow-lg dark:bg-gray-800">
        <h4 class="text-3xl font-bold mb-6 text-center text-gray-800 dark:text-gray-200">Edit Employee Information</h4>
        <hr class="border-gray-300 dark:border-gray-700 mb-8" />

        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="EmpNo" />
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <div class="space-y-2">
                <label for="FirstName" class="block text-sm font-medium text-gray-900 dark:text-gray-100">First Name</label>
                <input id="FirstName" name="FirstName" asp-for="FirstName"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="LastName" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Last Name</label>
                <input id="LastName" name="LastName" asp-for="LastName"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="Username" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Username</label>
                <input id="Username" name="Username" asp-for="Username"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="Password" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Password</label>
                <input id="Password" name="Password" asp-for="Password"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

          

            <div class="space-y-2">
                <label for="JoinDate" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Join Date</label>
                <input id="JoinDate" name="JoinDate" asp-for="JoinDate"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="JoinDate" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="Salary" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Salary</label>
                <input id="Salary" name="Salary" asp-for="Salary"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Salary" class="text-red-500 text-sm"></span>
            </div>
            <div class="grid md:grid-cols-2 grid-cols-1 col-span-3 gap-6">
                <div class="space-y-2">
                    <label for="Address" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Address</label>
                    <input id="Address" name="Address" asp-for="Address"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                </div>
                <div class="space-y-2">
                    <label for="Designation" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Designation</label>
                    <input id="Designation" name="Designation" asp-for="Designation"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Designation" class="text-red-500 text-sm"></span>
                </div>
             </div>

            <div class="space-y-2">
                <label for="ContactNo" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Contact No</label>
                <input id="ContactNo" name="ContactNo" asp-for="ContactNo"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="ContactNo" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="City" class="block text-sm font-medium text-gray-900 dark:text-gray-100">City</label>
                <input id="City" name="City" asp-for="City"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="City" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="State" class="block text-sm font-medium text-gray-900 dark:text-gray-100">State</label>
                <input id="State" name="State" asp-for="State"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="State" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="Country" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Country</label>
                <input id="Country" name="Country" asp-for="Country"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="PolicyStatus" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Policy Status</label>
                <input id="PolicyStatus" name="PolicyStatus" asp-for="PolicyStatus"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                <span asp-validation-for="PolicyStatus" class="text-red-500 text-sm"></span>
            </div>

            <div class="space-y-2">
                <label for="CompanyId" class="block text-sm font-medium text-gray-900 dark:text-gray-100">Company</label>
                <select id="CompanyId" name="CompanyId" asp-for="CompanyId" asp-items="ViewBag.CompanyId"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out">
                </select>
                <span asp-validation-for="CompanyId" class="text-red-500 text-sm"></span>
            </div>
            </div>

            <div class="flex justify-end space-x-4">
                <a asp-action="Index"
                   class="px-5 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700 transition duration-300">
                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                </a>
                <button type="submit"
                        class="px-9 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 dark:bg-blue-700 dark:hover:bg-blue-800 transition duration-300">
                    <i class="fas fa-save mr-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

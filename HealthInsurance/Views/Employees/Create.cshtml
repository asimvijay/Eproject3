@model HealthInsurance.Entities.EmpRegister

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-5xl p-8 bg-white rounded-xl shadow-lg dark:bg-gray-800">
        <h1 class="text-3xl font-extrabold mb-6 text-center text-gray-900 dark:text-gray-100">Create Employee</h1>
        <hr class="mb-8 border-gray-300 dark:border-gray-600" />

        <form asp-action="Create" class="space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- First Name -->
                <div class="space-y-2">
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 dark:text-gray-200">First Name</label>
                    <input asp-for="FirstName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
                </div>

                <!-- Last Name -->
                <div class="space-y-2">
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Last Name</label>
                    <input asp-for="LastName" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
                </div>

                <!-- Username -->
                <div class="space-y-2">
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Username</label>
                    <input asp-for="Username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                </div>

                <!-- Password -->
                <div class="space-y-2">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Password</label>
                    <input asp-for="Password" type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <!-- Join Date -->
                <div class="space-y-2">
                    <label asp-for="JoinDate" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Join Date</label>
                    <input asp-for="JoinDate" type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="JoinDate" class="text-red-500 text-sm"></span>
                </div>

                <!-- Salary -->
                <div class="space-y-2">
                    <label asp-for="Salary" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Salary</label>
                    <input asp-for="Salary" type="number" step="0.01" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Salary" class="text-red-500 text-sm"></span>
                </div>

                <!-- Address and Designation in one row -->
                <div class="col-span-3 grid grid-cols-1 gap-6 md:grid-cols-2">
                    <div class="flex-1 space-y-2">
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Address</label>
                        <input asp-for="Address" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex-1 space-y-2">
                        <label asp-for="Designation" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Designation</label>
                        <input asp-for="Designation" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                        <span asp-validation-for="Designation" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <!-- Contact No -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="ContactNo" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Contact No</label>
                    <input asp-for="ContactNo" type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="ContactNo" class="text-red-500 text-sm"></span>
                </div>

                <!-- City -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="City" class="block text-sm font-medium text-gray-700 dark:text-gray-200">City</label>
                    <input asp-for="City" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="City" class="text-red-500 text-sm"></span>
                </div>

                <!-- State -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="State" class="block text-sm font-medium text-gray-700 dark:text-gray-200">State</label>
                    <input asp-for="State" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="State" class="text-red-500 text-sm"></span>
                </div>

                <!-- Country -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="Country" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Country</label>
                    <input asp-for="Country" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
                </div>

                <!-- Policy Status -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="PolicyStatus" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Policy Status</label>
                    <input asp-for="PolicyStatus" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" />
                    <span asp-validation-for="PolicyStatus" class="text-red-500 text-sm"></span>
                </div>

                <!-- Company -->
                <div class="space-y-2 col-span-1 md:col-span-2 lg:col-span-1">
                    <label asp-for="CompanyId" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Company</label>
                    <select asp-for="CompanyId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 shadow-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 transition duration-150 ease-in-out" asp-items="ViewBag.CompanyId"><option value="">-- Please Select the Company --</option></select>
                </div>
            </div>

            <div class="flex items-center gap-4 flex-row-reverse mt-8">
                <div class="w-full">
                    <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 dark:bg-blue-700 dark:hover:bg-blue-800 rounded-lg py-3 font-medium text-lg shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-150 ease-in-out">
                        Create
                    </button>
                </div>
                <div class="text-center whitespace-nowrap">
                    <a asp-action="Index" class="inline-flex items-center text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-150 ease-in-out">
                        <i class="fas fa-arrow-left mr-2"></i> Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

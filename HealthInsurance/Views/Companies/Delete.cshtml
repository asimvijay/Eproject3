@model HealthInsurance.Entities.CompanyDetails

@{
    ViewData["Title"] = "Delete";
}

<div>
    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div id="alert" class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 relative opacity-100 transition-opacity duration-500 border border-red-800 dark:border-red-400" role="alert">
            <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <span class="sr-only">Error</span>
            <div class="ms-3 text-sm font-medium">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p >@error.ErrorMessage</p>
                }
            </div>
            <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" aria-label="Close" onclick="fadeOutAlert()">
                <span class="sr-only">Close</span>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        </div>
    }
</div>

<div class="flex justify-center items-center min-h-screen bg-gray-100 dark:bg-gray-900">
    <div class="w-full max-w-2xl p-6 bg-white rounded-lg shadow-md dark:bg-gray-800">
        <h1 class="text-2xl font-bold mb-4 text-center text-gray-900 dark:text-gray-100">Delete Confirmation</h1>
        <h3 class="text-xl font-semibold mb-4 text-center text-gray-700 dark:text-gray-300">Are you sure you want to delete this?</h3>

        <div class="bg-gray-50 dark:bg-gray-700 p-6 rounded-lg shadow-sm">
            <h4 class="text-lg font-semibold mb-2 text-gray-900 dark:text-gray-100">Company Details</h4>
            <hr class="mb-4 border-gray-300 dark:border-gray-600" />

            <dl class="space-y-2">
                <div class="flex items-start">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">
                        <i class="fas fa-building mr-2"></i> Company Name
                    </dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.CompanyName)</dd>
                </div>
                <div class="flex items-start">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">
                        <i class="fas fa-map-marker-alt mr-2"></i> Address
                    </dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.Address)</dd>
                </div>
                <div class="flex items-start">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">
                        <i class="fas fa-phone-alt mr-2"></i> Phone
                    </dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.Phone)</dd>
                </div>
                <div class="flex items-start">
                    <dt class="w-1/3 font-medium text-gray-900 dark:text-gray-100">
                        <i class="fas fa-globe mr-2"></i> Company URL
                    </dt>
                    <dd class="w-2/3 text-gray-700 dark:text-gray-300">@Html.DisplayFor(model => model.CompanyURL)</dd>
                </div>
            </dl>

            <form asp-action="Delete" class="mt-6 flex justify-center space-x-4">
                <input type="hidden" asp-for="CompanyId" /> 
                <a asp-action="Index" class="inline-flex items-center text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 font-medium transition duration-150 ease-in-out">
                    <i class="fas fa-arrow-left mr-2"></i> Back to List
                </a>
                <button type="submit" class="bg-red-600 text-white hover:bg-red-700 dark:bg-red-700 dark:hover:bg-red-800 rounded-lg py-2 px-4 font-semibold text-lg shadow-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-150 ease-in-out">
                    <i class="fas fa-trash-alt mr-2"></i> Delete
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
function fadeOutAlert() {
    const alert = document.getElementById('alert');
    if (alert) {
        alert.classList.add('opacity-0');
        setTimeout(() => {
            alert.style.display = 'none';
        }, 500); // duration of the opacity transition
    }
}
</script>
